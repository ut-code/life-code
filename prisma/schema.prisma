generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/generated"
  engineType = "client"           // no Rust engine
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BoardState {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  boardData Json
  boardName String
  boardPreview Json
}

model CodeState {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  codeData String
  codeName String
}